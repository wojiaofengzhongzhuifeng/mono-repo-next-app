{
  "name": "mono-repo-next-template",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:ui": "turbo run ui:build",
    "dev": "turbo run dev",
    "dev:home": "cd apps/home && pnpm dev",
    "dev:about-us": "cd apps/about-us && pnpm dev",
    "dev:count-number": "cd apps/count-number && pnpm dev",
    "dev:point-task": "cd apps/point-task && pnpm dev",
    "dev:all": "concurrently \"pnpm dev:home\" \"pnpm dev:about-us\" \"pnpm dev:count-number\"",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "clean": "turbo run clean && rm -rf node_modules",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.18",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "husky": "8.0.0",
    "lint-staged": "13.1.0",
    "postcss": "^8",
    "prettier": "3.4.2",
    "shadcn-ui": "^0.9.5",
    "tailwindcss": "^3.4.1",
    "turbo": "latest"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{css,scss,less}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "lucide-react": "^0.544.0",
    "swiper": "^12.0.2",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.1.1",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^4.5.0"
  }
}
